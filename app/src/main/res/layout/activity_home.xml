<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/home_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"></FrameLayout>
    
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:background="@color/smokeWhite"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:id="@+id/homeBottomNavigationView"
        app:itemBackground="@color/smokeWhite"
        app:itemTextColor="@android:color/white"
        app:itemIconTint="@color/gray"
        app:menu="@menu/bottom_navigation_home">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>